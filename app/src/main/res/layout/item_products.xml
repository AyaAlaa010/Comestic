<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/sMargin"
        >


        <androidx.cardview.widget.CardView
            android:id="@+id/card_product"
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            android:elevation="@dimen/elevation"
            app:cardCornerRadius="@dimen/card_corner_reduis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/product_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/product_img" />
        </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/normalText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_product"
                    android:text="cream"
                    android:layout_marginTop="@dimen/sMargin"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/normalText"
                    android:text="120$"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_product_name"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>